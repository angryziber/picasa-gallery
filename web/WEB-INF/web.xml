<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <filter>
        <filter-name>router</filter-name>
        <filter-class>net.azib.photos.RequestRouter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>router</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>sitemap</servlet-name>
        <servlet-class>net.azib.photos.SiteMapServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>sitemap</servlet-name>
        <url-pattern>/robots.txt</url-pattern>
        <url-pattern>/sitemap.xml</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>jsonp</servlet-name>
        <servlet-class>net.azib.photos.JsonpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>jsonp</servlet-name>
        <url-pattern>/jsonp.js</url-pattern>
    </servlet-mapping>
</web-app>
